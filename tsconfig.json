{
    "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "moduleResolution": "bundler",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": ["ESNext", "DOM"],
      "types": ["vite/client"],
      "skipLibCheck": true,
      "allowJs": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"]
  }